{# src/web3tc/EchangeBundle/Resources/views/Echange/formulaire.html.twig #}

{% extends "::base.html.twig" %}

{% block body %}

    <h1> E-rasmus </h1>
    
    <h2> Mon contrat d'étude </h2>
    
    <p> Merci de bien remplir tous les champs ci-dessous : </p>

    <div class="jumbotron">
        <form class="form-in-line" method="post" role="form"{{ form_enctype(form) }}>
            
            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}
            <p> Merci de bien remplir tous les champs ci-dessous : </p>
            <h3> INFORMATIONS PERSONNELLES : </h3>
         
            <div class="form-group">
                {{ form_label(form.nomEleve, "Nom ") }}
                <div class="col-sm-10">
                    {{ form_errors(form.nomEleve) }}
                    {{ form_widget(form.nomEleve) }}
                </div>
            </div>
            
            <div class="form-group">
                {{ form_label(form.prenomEleve, "Prénom ") }}
                <div class="col-sm-10">
                    {{ form_errors(form.prenomEleve) }}
                    {{ form_widget(form.prenomEleve) }}
                </div>
            </div>
                
            <div class="form-group">
                {{ form_label(form.departement, " Département INSA ") }}
                <div class="col-sm-2">
                    {{ form_errors(form.departement) }}
                    {{ form_widget(form.departement) }}
                </div> 
            </div>
                
            <div class="form-group">
                {{ form_label(form.anneeEnCours, " Année en cours ") }}
                <div class="col-sm-10">
                    {{ form_errors(form.anneeEnCours) }}
                    {{ form_widget(form.anneeEnCours) }}
                </div>  
            </div>
                
            <div class="form-group">
                <p> {{ form_label(form.dureeDuSejour, " Durée de l'échange ") }}</p>
                <div class="col-sm-2">
                    {{ form_errors(form.dureeDuSejour) }}
                    {{ form_widget(form.dureeDuSejour) }}
                </div>  
            </div>
                
            <h3> INFORMATIONS UNIVERSITE : </h3>
            <div class="universite">
                <p> {{ form_label(form.universite, " Université ") }}</p>
                <div class="col-sm-10">
                    {{ form_errors(form.universite) }}
                    {{ form_widget(form.universite) }}
                </div>  
            </div>
            
            <h3> INFORMATIONS CURSUS : </h3>
            <div class="cours">
                {{ form_label(form.cours, " Cours ") }}
                <div class="col-sm-10">
                    {{ form_errors(form.cours) }}
                    {{ form_widget(form.cours) }}
                </div>  
            </div>
           
            
    {{ form_rest(form) }}            
        <input type="submit" class="btn btn-primary" />
    </form>
</div>

    <script type="text/javascript">
        $(document).ready(function() {
            var $container = $('div#web3tc_echangebundle_contraetudetype_cours');

            var $lienAjout = $('<a href="#" id="ajout_cours" class="btn">Ajouter un cours</a>');
            $container.append($lienAjout);

            $lienAjout.click(function(e) {
                ajouterCours($container);
                e.preventDefault();
                return false;
            });

            var index = $container.find(':input').length;

            if (index == 0) {
                ajouterCours($container);
            } else {
                $container.children('div').each(function() {
                    ajouterLienSuppression($(this));
                });
            }

            function ajouterCours($container) {
                var $prototype = $($container.attr('data-prototype').replace(/__name__label__/g, 'Cours n°' + (index+1))
                                                                    .replace(/__name__/g, index));

                ajouterLienSuppression($prototype);
                $container.append($prototype);
                index++;
            }

            function ajouterLienSuppression($prototype) {
                $lienSuppression = $('<a href="#" class="btn btn-danger">Supprimer</a>');

                $prototype.append($lienSuppression);

                $lienSuppression.click(function(e) {
                    $prototype.remove();
                    e.preventDefault();
                    return false;
                });
            }
        });
    </script>

{% endblock %}