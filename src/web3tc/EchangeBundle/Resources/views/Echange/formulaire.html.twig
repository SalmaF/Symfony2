{# src/web3tc/EchangeBundle/Resources/views/Echange/formulaire.html.twig #}

{% extends "::base.html.twig" %}

{% block body %}
    
    <h2> Mon contrat d'étude </h2>
    
    <p> Merci de bien remplir tous les champs ci-dessous : </p>

    <div class="jumbotron">
        <form class="form-in-line" method="post" role="form"{{ form_enctype(form) }}>
            
            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}
            <p> Merci de bien remplir tous les champs ci-dessous : </p>
            <h3> INFORMATIONS PERSONNELLES : </h3>
         
            <div class="form-group col-lg-12">
                {{ form_label(form.nomEleve, 'Nom', {'label_attr': {'class': 'col-lg-2' } } ) }}
                {{ form_errors(form.nomEleve) }}
                {{ form_widget(form.nomEleve, {'widget_attr': {'class': 'col-lg-4 col-lg-offset-1' } } ) }}
                   
            </div>  
            <div class="form-group col-lg-12">
                {{ form_label(form.prenomEleve,'Prénom', {'label_attr': {'class': 'col-lg-2' } } ) }}
                    {{ form_errors(form.prenomEleve) }}
                    {{ form_widget(form.prenomEleve) }}
                    {{ form_row(form.prenomEleve, {'widget_attr': {'class': 'col-lg-4 col-lg-offset-1' } } ) }}
            </div>
                
                
            <div class="form-group col-lg-12">
                {{ form_label(form.departement, ' Département INSA ', {'label_attr': {'class': 'col-lg-2' } }) }}
                <div class="col-lg-3">
                    {{ form_errors(form.departement) }}
                    {{ form_widget(form.departement, {'widget_attr': {'class': 'col-lg-4 col-lg-offset-1' } } ) }}
                </div>
                
            </div>
                
            <div class="form-group col-lg-12">
                {{ form_label(form.anneeEnCours, ' Année en cours ', {'label_attr': {'class': 'col-lg-2' } }) }}
                <div class="col-lg-3">
                    {{ form_errors(form.anneeEnCours) }}
                    {{ form_widget(form.anneeEnCours, {'widget_attr': {'class': 'col-lg-4 col-lg-offset-1' } } ) }}
                </div>  
            </div>
                
            <div class="form-group col-lg-12">
                <p> {{ form_label(form.dureeDuSejour, ' Durée de l\'échange ', {'label_attr': {'class': 'col-lg-2' } }) }}</p>
                <div class="col-lg-3">
                    {{ form_errors(form.dureeDuSejour) }}
                    {{ form_widget(form.dureeDuSejour, {'widget_attr': {'class': 'col-lg-4 col-lg-offset-1' } } ) }}
                </div>  
            </div>
                
            <h3> INFORMATIONS UNIVERSITE : </h3>
            <div class="universite form-in-line col-lg-12">
                {#<p> {{ form_label(form.universite, ' Université ', {'label_attr': {'class': 'col-lg-2' } }) }}</p>
                 <div class="col-lg-3">
                    {{ form_errors(form.universite) }}
                    {{ form_widget(form.universite, {'widget_attr': {'class': 'col-lg-4 col-lg-offset-1' } } ) }}
                </div>  #}
                    
               <div class="form-group col-lg-12">
                    <p> {{ form_label(form.universite.nom, ' Nom de l\'Université', {'label_attr': {'class': 'col-lg-3' } }) }}</p>
                    <div class="col-lg-4">
                        {{ form_errors(form.universite.nom) }}
                        {{ form_widget(form.universite.nom, {'widget_attr': {'class': 'col-lg-4 col-lg-offset-1' } } ) }}
                    </div>  
                </div>
                    
                <div class="form-group col-lg-12">
                    <p> {{ form_label(form.universite.nom, ' Pays de l\'Université', {'label_attr': {'class': 'col-lg-3' } }) }}</p>
                    <div class="col-lg-4">
                        <select name="pays"> 
                            {% for pays in pays %}
                                <option value="{{ pays.nom }}"> {{ pays.nom }} </option>
                            {% endfor %}
                        </select>
                    </div>  
                </div>    
                
                <div class="form-group col-lg-12">
                    <p> {{ form_label(form.universite.nom, ' Ville de l\'Université', {'label_attr': {'class': 'col-lg-3' } }) }}</p>
                    <div class="col-lg-4">
                        <select name="ville"> 
                            {% for ville in villes %}
                                <option value="{{ ville.nom }}"> {{ ville.nom }} </option>
                            {% endfor %}
                        </select>
                    </div>  
                </div>
            
            </div>
            
            <h3> INFORMATIONS CURSUS : </h3>
            <div class="cours col-lg-12">
                {{ form_label(form.cours, " Cours ", {'label_attr': {'class': 'col-lg-2' } } ) }}
                <div class="col-lg-3">
                    {{ form_errors(form.cours) }}
                    {{ form_widget(form.cours, {'widget_attr': {'class': 'col-lg-4 col-lg-offset-1' } } ) }}
                </div>  
            </div>
           
            
    {{ form_rest(form) }}            
        <input type="submit" class="btn btn-primary" />
    </form>
</div>

    <script type="text/javascript">
        $(document).ready(function() {
            var $container = $('div#web3tc_echangebundle_contraetudetype_cours');

            var $lienAjout = $('<a href="#" id="ajout_cours" class="btn">Ajouter un cours</a>');
            $container.append($lienAjout);

            $lienAjout.click(function(e) {
                ajouterCours($container);
                e.preventDefault();
                return false;
            });

            var index = $container.find(':input').length;

            if (index == 0) {
                ajouterCours($container);
            } else {
                $container.children('div').each(function() {
                    ajouterLienSuppression($(this));
                });
            }

            function ajouterCours($container) {
                var $prototype = $($container.attr('data-prototype').replace(/__name__label__/g, 'Cours n°' + (index+1))
                                                                    .replace(/__name__/g, index));

                ajouterLienSuppression($prototype);
                $container.append($prototype);
                index++;
            }

            function ajouterLienSuppression($prototype) {
                $lienSuppression = $('<a href="#" class="btn btn-danger">Supprimer</a>');

                $prototype.append($lienSuppression);

                $lienSuppression.click(function(e) {
                    $prototype.remove();
                    e.preventDefault();
                    return false;
                });
            }
        });

            $lienSuppression.click(function(e) {
                $prototype.remove();
                e.preventDefault();
                return false;
            });
        }
    });
</script>
{% endblock %}