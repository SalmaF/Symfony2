{% extends "::base.html.twig" %}

{% block title %}Ajout contrat{% endblock %}

{% block body %}
    
    <div class="well">
        <h1>Ajouter un cours</h1>
    </div>
        
    <div class="jumbotron">

            <div class="progress progress-striped active">
            <div class="progress-bar"  role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 30%">
                <span class="sr-only">70% Complete</span>
           </div>
            </div>
        <form class="form-in-line" method="post" role="form" {{ form_enctype(form) }}>
 
                        <div class="form-group col-md-12">
                {{ form_label(form.numero, 'Numero',{'label_attr': {'class': 'col-lg-3' } } ) }}
                <div class="col-md-4">
                    {{ form_errors(form.numero) }}
                    {{ form_widget(form.numero, {'widget_attr': {'class': 'col-lg-4 col-lg-offset-1' } } ) }}
                </div> 
            </div>
            
                        <div class="form-group col-md-12">
                {{ form_label(form.titre, 'Titre', {'label_attr': {'class': 'col-lg-3' } } ) }}
                <div class="col-md-4">
                    {{ form_errors(form.titre) }}
                    {{ form_widget(form.titre, {'widget_attr': {'class': 'col-lg-4 col-lg-offset-1' } } ) }}
                </div> 
                    
                    
                    {{ form_rest(form) }}
            
            <input type="submit" class="btn btn-primary" />
            
        </form>
    </div>
{% if contrat %}
<table class="table table-striped">
        <tr>
            <th>Numéro</th><th>Cours</th><th>Semestre(s)</th><th>Crédits</th>
        </tr>
        
        {% for cours in contrat.cours %}
            <tr>
                <td>{{cours.numero}}</td>
                <td>{{cours.titre}}</td>
                <td>{{cours.semestre}}</td>
                <td>{{cours.credits}}</td>                
            </tr>
    {% endfor %}
    </table>
{% endif %}
